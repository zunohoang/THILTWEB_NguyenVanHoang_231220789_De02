@model NguyenVanHoang_231220789_De02.Models.NvhCatalog

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h2 class="text-center text-info mb-4">📋 Chi tiết sản phẩm</h2>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body p-4">

                <dl class="row">
                    <dt class="col-sm-3 fw-bold">Tên sản phẩm</dt>
                    <dd class="col-sm-9">@Model.nvhCateName</dd>

                    <dt class="col-sm-3 fw-bold">Giá</dt>
                    <dd class="col-sm-9">@Model.nvhCatePrice VNĐ</dd>

                    <dt class="col-sm-3 fw-bold">Số lượng</dt>
                    <dd class="col-sm-9">@Model.nvhCateQty</dd>

                    <dt class="col-sm-3 fw-bold">Ảnh</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.nvhPicture))
                        {
                            <img src="~/images/@Model.nvhPicture" alt="Ảnh sản phẩm" class="img-thumbnail" style="max-height:200px;" />
                        }
                        else
                        {
                            <span class="text-muted">Chưa có ảnh</span>
                        }
                    </dd>

                    <dt class="col-sm-3 fw-bold">Trạng thái</dt>
                    <dd class="col-sm-9">
                        @if (Model.nvhCateActive)
                        {
                            <span class="badge bg-success">Đang hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Ngừng hoạt động</span>
                        }
                    </dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="NvhIndex" class="btn btn-outline-secondary">⬅ Quay lại</a>
                    <a asp-action="NvhEdit" asp-route-id="@Model?.nvhId" class="btn btn-primary shadow">✏ Chỉnh sửa</a>
                </div>
            </div>
        </div>
    </div>
</div>
