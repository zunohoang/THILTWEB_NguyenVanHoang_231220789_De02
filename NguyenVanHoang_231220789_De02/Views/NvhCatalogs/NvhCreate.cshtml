@model NguyenVanHoang_231220789_De02.Models.NvhCatalog

@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<h2 class="text-primary text-center mb-4">➕ Thêm sản phẩm mới</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body p-4">
                <form asp-action="NvhCreate" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="nvhCateName" class="form-label fw-bold">Tên sản phẩm</label>
                        <input asp-for="nvhCateName" class="form-control border-primary" placeholder="Nhập tên sản phẩm..." />
                        <span asp-validation-for="nvhCateName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="nvhCatePrice" class="form-label fw-bold">Giá</label>
                        <input asp-for="nvhCatePrice" type="number" step="0.01" class="form-control border-success" placeholder="Nhập giá..." />
                        <span asp-validation-for="nvhCatePrice" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="nvhCateQty" class="form-label fw-bold">Số lượng</label>
                        <input asp-for="nvhCateQty" type="number" class="form-control border-info" placeholder="Nhập số lượng..." />
                        <span asp-validation-for="nvhCateQty" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UploadImage" class="form-label fw-bold">Chọn ảnh</label>
                        <input asp-for="UploadImage" type="file" class="form-control border-warning"
                               accept=".jpg, .jpeg, .png, .gif, .tiff" />
                        <small class="text-muted">Chỉ chấp nhận file ảnh (.jpg, .jpeg, .png, .gif, .tiff)</small>
                        <span asp-validation-for="UploadImage" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="nvhCateActive" />
                        <label class="form-check-label fw-bold">
                            Hoạt động
                        </label>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="NvhIndex" class="btn btn-outline-secondary">
                            ⬅ Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary shadow">
                            💾 Lưu sản phẩm
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
